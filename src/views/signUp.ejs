<div class="container text-center my-5">
    <div class="user my-3">
        <i class="far fa-edit user-icon"></i>
        <h2 class="login">Register</h2>
    </div>
    <div class="card p-5 w-50 m-auto">
        <form method="POST" action="/Auth/signUp">
            <input class="form-control" placeholder="Enter your Name" type="text" name="name" value="<%= data?.name %>">
            <input class="form-control my-2 " placeholder="Enter your email" type="email" name="email" value="<%= data?.email %>">
            <% if (vaildationErorr?.includes('email')) { %>
                <p class="text-danger">Invaild Email</p>
                
            <% } %>
            <div class="password-container">
                <input class="form-control my-2 " type="password" id="password" class="password-input" placeholder="Enter your password" name="password" value="<%= data?.password %>" >
                <span class="show-password-toggle"  class="btn btn-outline-secondary" onclick="togglePasswordVisibility()">
                    Show/Hide
                </span>
                <% if (vaildationErorr?.includes('password')) { %>
                    <p class="text-danger">password must be 8 characters long and contain at least one lowercase letter,one uppercase letter,numbers,Special_Char</p>
                    
                <% } %>
            </div>
            <input class="form-control  my-2" placeholder="Password Confirmation"  name="confirmPassword" >
            <% if (vaildationErorr?.includes('confirmPassword')) { %>
                <p class="text-danger">confirmPassword must be as password</p>
                
            <% } %>
            <button class="btn btn-default-outline my-4 w-100 rounded">Register</button>
            <% if (error) { %>
                <div class="alert alert-warning" role="alert">
                    <strong><%= error %></strong> 
                </div>
            <% } %>
            <p class="text-center mt-2"> Aready Have Account ? <a style=" text-decoration: none"  href="/Auth/logIn">logIn</a></p>
        </div>
        </form>
    </div>
</div>

