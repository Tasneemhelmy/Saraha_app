<div class="container text-center py-5 my-5 text-center">
    <div class="card pt-5">
        <div class="circular-image" >
            <img src="http://localhost:5000/uploads/<%= user?.image %>" class="avatar " alt="">
        </div>
        <h3 class="py-2"><%= user?.name %></h3>
        <a href="<%= link %>"  target="_blank" data-toggle="modal" data-target="#share" class="btn btn-default-outline share "><i class="fas fa-share-alt"></i>  Share Profile</a>
    </div>
</div>
<!-- profile photo Modal -->
<div class="modal fade" id="profile" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Change photo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
            </div>
            <div class="modal-body">

                <div class="container">
                    <form action="" method="post">
                        <label for="" class="text-muted">The file size of the photo should not exceed 7 MB</label>
                        <input class="form-control" type="file" name="photo" id="">

                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-info">Upload</button>
                <button type="button" class="btn btn-outline-danger">Remove Photo</button>
            </div>
        </div>
    </div>
</div>

<!--  Share profile Modal -->
<div class="modal fade" id="share" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Share Profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
            </div>
            <div class="modal-body">
                <p>host/messages/id</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<!-- /modal -->



<!-- =================messages=================== -->
<% if (massages?.length) { %>
<% for (let i = 0; i < massages.length; i++) { %>
    <div class="container text-center my-5 text-center ">
        <div class="row">
            <div class="col-md-12">
                <div class="card py-5">
                    <div><p class=""><%= massages[i].content %> </></div>
                        <div class=" mt-5">
                            <a href="/message/deleteMessage/<%= massages[i]._id %>" class="btn btn-outline-danger">Delete Message</a>
                        </div>
                    </div>
            </div>
        </div>
    </div>
<% } %>
<% } %>

<% if (!massages?.length) { %>
    <div class="container text-center my-5 text-center">
        <div class="row">
            <div class="col-md-12">
                <div class="card py-5">
                    <p>You don't have any messages... </p>
                </div>
            </div>
        </div>
    </div>
<% } %>

